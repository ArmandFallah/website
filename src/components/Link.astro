---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
  href: string;
}
const { href, ...attrs } = Astro.props;
---

<a
  data-astro-prefetch="viewport"
  class="border-b-2 border-gray-300 dark:border-gray-600 hover:border-black dark:hover:border-white transition-all ease-in-out duration-300"
  href={href}
  {...attrs}
>
  <slot />
</a>
